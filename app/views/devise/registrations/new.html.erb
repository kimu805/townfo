<div class= "main">
  <div class= "main_box">

    <%= form_with model: @user, url: user_registration_path, id: "new_user", class: "new_user", local: true do |f| %>

      <div class='form-header'>
        <h1 class='form-header-text'>
          新規ユーザー登録
        </h1>
      </div>

      <%= render 'shared/error', model: f.object %> 

      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :nickname, class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, class:"input-default", id:"userNickname_form", placeholder:"例) townfo太郎", maxlength:"30", autofocus: true %>
        <p class= "form_count_box">文字数：<span class= "form_count" id= "userNickname_count">0</span></p>

      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :profile, class: "form-text" %>
        </div>
        <%= f.text_area :profile, class:"form_userProfile input-default", id: "userProfile_form" , placeholder:"例) townfo太郎と申します！
趣味はゴルフとカフェ巡りです。よろしくお願いします。" %>
        <p class= "form_count_box">文字数：<span class= "form_count" id= "userProfile_count">0</span></p>

      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :email, class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
      </div>
      
      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :password, class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>
      
      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :password_confirmation, class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      
      <div class='commit-btn'>
        <%= f.submit "登録" ,class:"commit-red-btn" %>
      </div>
    <% end %>

  </div>
</div>