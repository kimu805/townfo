<%= form_with model: notice, url: url, local: true do |f| %>

  <div class='form-header'>
  <% if request.path == new_group_notice_path(current_group) %>
    <h1 class='form-header-text'>
      新規お知らせ入力
    </h1>
  <% elsif request.path == edit_group_notice_path(current_group) %>
    <h1 class='form-header-text'>
      お知らせ編集画面
    </h1>
  <% end %>
  </div>
  <%= render partial: "shared/error", locals: {model: notice} %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :title, class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :title, class:"input-default", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :content, class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :content, class:"input-default", placeholder:"" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :schedule, class: "form-text" %>
    </div>
    <%= f.date_field :schedule, class:"input-default" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :tag_id, class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:tag_id, Tag.all, :id, :name, {class:"input-default"}) %>
  </div>
  <% if request.path == new_group_notice_path(current_group) %>
    <div class='commit-btn'>
      <%= f.submit "投稿" ,class:"commit-red-btn" %>
    </div>
  <% elsif request.path == edit_group_notice_path(current_group) %>
    <div class='commit-btn'>
      <%= f.submit "更新" ,class:"commit-red-btn" %>
    </div>
  <% end %>
<% end %>