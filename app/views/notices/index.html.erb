<div class= "main">
  <div class= "main_box">
    <div class= "noticeIndex_indexButton_box">
      <%= link_to "お知らせ一覧", group_notices_path(current_group), class: "noticeIndex_noticeIndexButton link" %>
      <%= link_to "回覧板一覧", group_circulars_path(current_group), class: "noticeIndex_circularIndexButton link" %>
    </div>

    <%= link_to "お知らせ一覧", group_notices_path(current_group, view: "list") %> |
    <%= link_to "カレンダー一覧", group_notices_path(current_group, view: "calendar") %>

    <% if params[:view] == "calendar" %>
      <%= render partial: "calendar", locals: {notices: @notices} %>
    <% else %>
      <%= render partial: "notice", collection: @notices %>
    <% end %>
    
  </div>
</div>

<%= link_to( new_group_notice_path(current_group), class: "new_btn link") do %>
  <span class= "new_btn_text">投稿</span>
  <%= image_tag "icon_pencil.png", size: "185x60", class: "new_btn_icon" %>
<% end %>