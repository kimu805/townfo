<div class= "main">
  <div class= "main_box">
    <div class= "index_btn_box">
      <div class= "white_index_btn_box">
        <%= link_to( group_notices_path(current_group), class: "link") do %>
          <div class= "white_index_btn_text">お知らせ一覧</div>
        <% end %>
      </div>
      <div class= "gray_index_btn_box">
        <%= link_to( group_circulars_path(current_group), class: "link") do %>
          <div class= "gray_index_btn_text">回覧板一覧</div>
        <% end %>
      </div>
    </div>

    <% @notices.each do |notice| %>
      <%= render partial: "notice", locals: { notice: notice } %>
    <% end %>
  </div>
</div>

<%= link_to( new_group_notice_path(current_group), class: "new_btn link") do %>
  <span class= "new_btn_text">投稿</span>
  <%= image_tag "icon_pencil.png", size: "185x60", class: "new_btn_icon" %>
<% end %>