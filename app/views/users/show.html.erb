<div class= "main">
  <div class= "main_box">
    <% if current_group %>
      <%= link_to(group_notices_path(current_group), class: "link") do %>
        <%= image_tag "back.png", size: "40x40", class: "back_image" %>
      <% end %>
    <% else %>
      <%= link_to(root_path, class: "link") do %>
        <%= image_tag "back.png", size: "40x40", class: "back_image" %>
      <% end %>
    <% end %>

    <div class= "mypage">
      <div class= "mypage_box">
        <div class= "user_info_box">
          <div class= "user_name"><%= @user.nickname %></div>
          <div class= "user_email"><%= @user.email %></div>
          <div class= "user_profile">
            <%= simple_format(h(@user.profile), {}, sanitize: false, wrapper_tag: "div") %>
          </div>
        </div>
        <% if current_user == @user %>
          <div class= "user_edit_btn">
            <%= link_to "プロフィールを編集", edit_user_path(@user), class: "blueButton link" %> 
          </div>
        <% end %>
      </div>
    </div>

    <span class= "user_notice">
      <%= @user.nickname %>の投稿
    </span>
    
    <%= render partial: "notices/notice", collection: @notices %>
    
  </div>
</div>