<div class= "main">
  <div class= "main_box">

    <%= link_to(group_notices_path(current_group), class: "link") do %>
      <%= image_tag "back.png", size: "40x40", class: "back_image" %>
    <% end %>
    
    <%= form_with model: @circular, url: group_circulars_path(current_group), local: true do |f| %>  
      <div class='form-header'>
        <h1 class='form-header-text'>
          回覧板新規投稿
        </h1>
      </div>
      
      <%= render partial: "shared/error", locals: {model: @circular} %>

      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :title, class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :title, class:"input-default", autofocus: true %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :pdf_file, class: "form-text" %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.file_field :pdf_file, class:"input-default" %>
      </div>

      <div class='commit-btn'>
        <%= f.submit "投稿" ,class:"commit-red-btn" %>
      </div>
    <% end %>
  </div>
</div>