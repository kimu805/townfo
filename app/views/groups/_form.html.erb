<%= form_with model: group, url: url, local: true do |f| %>

  <div class= "field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class= "field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit nil %>
  </div>
<% end %>