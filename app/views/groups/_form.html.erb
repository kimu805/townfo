<%= form_with model: group, url: url, local: true do |f| %>

  <%= render partial: "shared/error", locals: {model: group} %>

  <div class='form-header'>
  <% if request.path == new_group_path %>
    <h1 class='form-header-text'>
      グループ新規作成
    </h1>
  <% elsif request.path == edit_group_path(group) %>
    <h1 class='form-header-text'>
      グループ情報編集
    </h1>
  <% end %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :name, class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, class:"input-default", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :description, class: "form-text" %>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :description, class:"input-default", placeholder:"" %>
  </div>

  <% if request.path == new_group_path %>
    <div class='commit-btn'>
      <%= f.submit "作成" ,class:"commit-red-btn" %>
    </div>
  <% elsif request.path == edit_group_path(group) %>
    <div class='commit-btn'>
      <%= f.submit "更新" ,class:"commit-red-btn" %>
    </div>
  <% end %>
<% end %>