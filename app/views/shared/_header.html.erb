<header class="header">
  <div class="app_title">
    <%= link_to "townfo", root_path, class: "link" %>
  </div>
  <ul class="nav_lists">
    <% if current_user && current_group %>
      <li class="nav_list"><%= link_to current_group.name, group_path(current_group), class: "link" %></li>
      <li class="nav_list"><%= link_to current_user.nickname, group_user_path(group_id: current_group.id, id: current_user.id), class: "link" %></li>
      <li class="nav_list">
        <%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete}, class: "link" %>
      </li>
      <% if current_user.id == current_group.owner_id %>
        <li class="nav_list">
          <%= link_to "ユーザー管理", group_memberships_path(current_group), class: "link" %>
        </li>
      <% end %>
    <% elsif current_user %>
      <li class="nav_list">
        <%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete}, class: "link" %>
      </li>
    <% else %>
      <li class="nav_list">
        <%= link_to "ログイン", new_user_session_path, class: "link" %>
      </li>
      <li class="nav_list">
        <%= link_to "新規登録", new_user_registration_path, class: "link" %>
      </li>
    <% end %>
  </ul>
</header>