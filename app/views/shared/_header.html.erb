<header class= "header">
  <div class= "app_title">
    <%= link_to "townfo", root_path, class: "link" %>
  </div>
  <ul class= "nav_lists">
    <% if current_user && current_group %>
      <li class= "nav_list"><%= link_to truncate(current_group.name, length: 20), group_path(current_group), class: "link" %></li>
      <li class= "nav_list">
        <%= link_to current_user.nickname, "#", class: "link" %>
        <ul class= "dropdown_lists">
          <li class= "dropdown_list"><%= link_to "マイページ", group_user_path(group_id: current_group.id, id: current_user.id), class: "dropdown_link link" %></li>
          <li class= "dropdown_list"><%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown_link link" %></li>
        </ul>
      </li>
    <% elsif current_user %>
      <li class= "nav_list">
        <%= current_user.nickname %>
      </li>
      <li class= "nav_list">
        <%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete}, class: "link" %>
      </li>
    <% else %>
      <li class= "nav_list">
        <%= link_to "ログイン", new_user_session_path, class: "link" %>
      </li>
      <li class= "nav_list">
        <%= link_to "新規登録", new_user_registration_path, class: "link" %>
      </li>
    <% end %>
  </ul>
</header>
